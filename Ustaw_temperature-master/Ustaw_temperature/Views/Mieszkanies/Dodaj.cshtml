@model Ustaw_temperature.Models.Mieszkanie

@{
    ViewData["Title"] = "Dodaj";
}



@if (string.IsNullOrEmpty(Model.Uzytkownik2))
{
    <h1>Dodaj współlokatora</h1>
    
}
else
{
    <h1>Zmień współlokatora</h1>
    
    
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Dodaj">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Uzytkownik2" class="control-label"></label>
                <select asp-for="Uzytkownik2" class="form-control" asp-items="ViewBag.Uzytkownik2">/></select>
                <span asp-validation-for="Uzytkownik2" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                @if (string.IsNullOrEmpty(Model.Uzytkownik2))
                {
                    <input type="submit" value="Dodaj" class="btn btn-primary" />

                }
                else
                {
                    <input type="submit" value="Zmień" class="btn btn-primary" />


                }
                
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Wróć</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}